# Django settings
SECRET_KEY=This key is not very secure and you should change it.
DEBUG=True
ALLOWED_HOSTS=*

# Database configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=dmoj
DB_USER=dmoj
DB_PASSWORD=<mariadb user password>
DB_HOST=127.0.0.1
DB_CHARSET=utf8mb4
DB_SQL_MODE=STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION

# Internationalization
LANGUAGE_CODE=en-us
DEFAULT_USER_TIME_ZONE=Asia/Ho_Chi_Minh
USE_I18N=True

# Static files configuration
STATIC_ROOT=/tmp/static
COMPRESS_OUTPUT_DIR=cache

# Email configuration (choose one backend)
# Console backend for testing
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Gmail backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_USE_TLS=True
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=<your account>@gmail.com
# EMAIL_HOST_PASSWORD=<your password>
# EMAIL_PORT=587

# Mailgun backend (requires django-mailgun)
# EMAIL_BACKEND=django_mailgun.MailgunBackend
# MAILGUN_ACCESS_KEY=<your Mailgun access key>
# MAILGUN_SERVER_NAME=<your Mailgun domain>

# SendGrid backend (requires sendgrid-django)
# EMAIL_BACKEND=sgbackend.SendGridBackend
# SENDGRID_API_KEY=<Your SendGrid API Key>

# Error notification emails
ADMIN_NAME=Your Name
ADMIN_EMAIL=your.email@example.com
SERVER_EMAIL=DMOJ: Modern Online Judge <errors@dmoj.ca>

# DMOJ-specific settings
SITE_NAME=DMOJ
SITE_LONG_NAME=DMOJ: Modern Online Judge
SITE_ADMIN_EMAIL=admin@example.com
TERMS_OF_SERVICE_URL=//dmoj.ca/tos/

# Bridge controls
BRIDGED_JUDGE_HOST=localhost
BRIDGED_JUDGE_PORT=9999
BRIDGED_DJANGO_HOST=localhost
BRIDGED_DJANGO_PORT=9998

# Features
ENABLE_FTS=True

# Event server
# EVENT_DAEMON_USE=True
# EVENT_DAEMON_POST=ws://127.0.0.1:15101/
# EVENT_DAEMON_GET=ws://<your domain>/event/
# EVENT_DAEMON_GET_SSL=wss://<your domain>/event/
# EVENT_DAEMON_POLL=/channels/
# EVENT_DAEMON_AMQP=<amqp:// URL to connect to>
# EVENT_DAEMON_AMQP_EXCHANGE=<AMQP exchange to use>

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# CDN URLs
ACE_URL=//cdnjs.cloudflare.com/ajax/libs/ace/1.2.3/
JQUERY_JS=//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js
SELECT2_JS_URL=//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js
SELECT2_CSS_URL=//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css
TIMEZONE_MAP=https://upload.wikimedia.org/wikipedia/commons/thumb/2/23/Blue_Marble_2002.png/1024px-Blue_Marble_2002.png

# Camo settings
# DMOJ_CAMO_URL=<URL to your camo install>
# DMOJ_CAMO_KEY=<The CAMO_KEY environmental variable you used>
# DMOJ_CAMO_HTTPS=False

# PDF rendering
# DMOJ_PDF_PDFOID_URL=<URL to your pdfoid install>
# DMOJ_PDF_PROBLEM_CACHE=/home/dmoj-uwsgi/pdfcache
# DMOJ_PDF_PROBLEM_INTERNAL=/pdfcache

# Data download settings
# DMOJ_USER_DATA_DOWNLOAD=True
# DMOJ_USER_DATA_CACHE=/home/dmoj-uwsgi/datacache
# DMOJ_USER_DATA_INTERNAL=/datacache

# Social authentication
# SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=
# SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=
# SOCIAL_AUTH_FACEBOOK_KEY=
# SOCIAL_AUTH_FACEBOOK_SECRET=
# SOCIAL_AUTH_GITHUB_SECURE_KEY=
# SOCIAL_AUTH_GITHUB_SECURE_SECRET=

# Custom settings
DMOJ_PROBLEM_DATA_ROOT=/mnt/problems
